<div class="card text-center">
<div class="container text-center">
  <div class="row align-items-start">
<h1>Company Records</h1>

<td> <%= link_to 'New Company Record', new_record_path %> </td>
<table class="table table-success table-striped">
<thead>
<tr>
<th> Company ID</th>
<th> Company Name</th>
<th> Email ID</th>
<th> Company Code </th>
<th> Strength </th>
<th> Website </th>
<th> Created Time </th>
<th colspan="3"> Action </th>
</tr>
</thead>
<tbody>
<% @records.each do |record| %>
    <tr>

       <td> <%= record.id %> </td>
       <td> <%= record.company_name %> </td>
       <td> <%= record.email_id %> </td>
       <td> <%= record.company_code%> </td>
       <td> <%= record.strength %> </td>
       <td> <%= record.website %> </td>
       <td> <%= record.created_at %></td>
       <td> <button type="button" class="btn btn-info "> <%= link_to 'View', record %> </button></td>
       <td> <button type="button" class="btn btn-light "> <%= link_to 'Edit', edit_record_path(record) %> </button> </td>
       <td> <%= button_to 'Delete', record, method: :delete, data: {confirm: 'Are you sure?'} %> </td>
    </tr>
<% end %>
</tbody>
</table >
<%= paginate @records %>
</div>
</div>
</div>
